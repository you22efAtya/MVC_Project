@using Demo.BLL.Dtos.Departments
@model DepartmentToCreateDto
@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Department</h1>
    <form method="post" class="col-8" asp-controller="Department" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span> @*Code is required*@
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span> @*Name is required*@
        </div>
        <div class="form-group mb-3">
            <label class="form-label" asp-for="Description">Description</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>

        <div class="form-group mb-3">
            <label class="form-label" asp-for="CreationDate">Creation Date</label>
            <input type="date" asp-for="CreationDate" class="form-control" />
        </div>

        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Create" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
